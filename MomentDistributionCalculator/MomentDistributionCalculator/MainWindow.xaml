<Window x:Class="MomentDistributionCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MomentDistributionCalculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="850">
    <Grid>
        <Canvas Name="MainCanvas" 
                MouseMove="MainCanvas_MouseMove" 
                MouseLeftButtonUp="MainCanvas_MouseLeftButtonUp"
                MouseRightButtonUp="MainCanvas_MouseRightButtonUp"
                Height="450" Width="800" Background="LightGray"/>
        <StackPanel Orientation="Horizontal">
            <TextBox Name="LeftState" Text="{Binding LeftMouseState}" Height="25" Width="100" VerticalAlignment="Bottom"/>

            <TextBox Name="RightState" Text="{Binding RightMouseState}" Height="25" Width="100" VerticalAlignment="Bottom"/>

            <TextBox Name="Coords" Height="25" Width="100" VerticalAlignment="Bottom"/>
        </StackPanel>


    </Grid>
</Window>
